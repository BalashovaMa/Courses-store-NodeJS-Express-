<h1>Add New Course</h1>

<form action='/add' method='post'>
    <div class='input-field'>
        <input name='title' id='title' type='text' class='validate' required />
        <label for='title'>Course name</label>
        <span class='helper-text' data-error='Enter the course name'></span>
    </div>
    <div class='input-field'>
        <input
            name='price'
            id='price'
            type='number'
            class='validate'
            required
            min='10'
        />
        <label for='price'>Course price</label>
        <span class='helper-text' data-error='Enter the course price'></span>
    </div>
    <div class='input-field'>
        <input name='img' id='img' type='text' class='validate' required />
        <label for='img'>URL image</label>
        <span class='helper-text' data-error='Enter image`s URL'></span>
    </div>
    <button class='btn btn-primary'>Add course</button>
</form>