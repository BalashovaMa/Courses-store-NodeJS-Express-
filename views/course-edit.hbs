<h1>Edit {{course.title}}</h1>

<form action='/courses/edit' method='post'>
    <div class='input-field'>
        <input
            name='title'
            id='title'
            type='text'
            class='validate'
            required
            value='{{course.title}}'
        />
        <label for='title'>Course name</label>
        <span class='helper-text' data-error='Enter the course name'></span>
    </div>
    <div class='input-field'>
        <input
            name='price'
            id='price'
            type='number'
            class='validate'
            required
            min='10'
            value='{{course.price}}'
        />
        <label for='price'>Course price</label>
        <span class='helper-text' data-error='Enter the course price'></span>
    </div>
    <div class='input-field'>
        <input
            name='img'
            id='img'
            type='text'
            class='validate'
            required
            value='{{course.img}}'
        />
        <label for='img'>URL image</label>
        <span class='helper-text' data-error='Enter image`s URL'></span>
    </div>
    <button class='btn btn-primary'>Edit course</button>

    <input type='hidden' name='id' value='{{course.id}}' />
</form>